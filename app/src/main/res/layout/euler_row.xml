    <TextView
        android:id="@+id/euler_iter_text"
        android:text="1.    "
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/euler_x_text"
        android:text="x: 102020220202.2232323"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="wrap_content"
